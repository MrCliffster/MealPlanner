@page
@model MealPlanner.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ingredient.IngredientCategoryID" class="control-label"></label>
                <select asp-for="Ingredient.IngredientCategoryID" class ="form-control" asp-items="ViewBag.IngredientCategoryID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Name" class="control-label"></label>
                <input asp-for="Ingredient.Name" class="form-control" />
                <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Unit" class="control-label"></label>
                <input asp-for="Ingredient.Unit" class="form-control" />
                <span asp-validation-for="Ingredient.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.UnitQuantity" class="control-label"></label>
                <input asp-for="Ingredient.UnitQuantity" class="form-control" />
                <span asp-validation-for="Ingredient.UnitQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.UnitCost" class="control-label"></label>
                <input asp-for="Ingredient.UnitCost" class="form-control" />
                <span asp-validation-for="Ingredient.UnitCost" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.Perishable" /> @Html.DisplayNameFor(model => model.Ingredient.Perishable)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.Standard" /> @Html.DisplayNameFor(model => model.Ingredient.Standard)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.Vegetarian" /> @Html.DisplayNameFor(model => model.Ingredient.Vegetarian)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.GlutenFree" /> @Html.DisplayNameFor(model => model.Ingredient.GlutenFree)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.LactoseFree" /> @Html.DisplayNameFor(model => model.Ingredient.LactoseFree)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
